# Environment Configuration for Layered Architecture
# Copy to .env and update with your values

# ===================
# GENERAL
# ===================
ENVIRONMENT=development
DEBUG=True

# ===================
# BACKEND LAYER
# ===================

# Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-in-production-to-a-random-secret-key
HOST=0.0.0.0
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://anc_user:anc_password@localhost:5432/anc_system
POSTGRES_USER=anc_user
POSTGRES_PASSWORD=anc_password
POSTGRES_DB=anc_system

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# JWT
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# ANC Configuration
ANC_FILTER_TAPS=512
ANC_SAMPLE_RATE=48000
ANC_BLOCK_SIZE=1024
ANC_DEFAULT_ALGORITHM=nlms

# ML Configuration
ML_MODEL_PATH=./models/noise_classifier_sklearn.pkl
ML_CONFIDENCE_THRESHOLD=0.7

# Emergency Detection
EMERGENCY_DETECTION_ENABLED=True
EMERGENCY_CONFIDENCE_THRESHOLD=0.85

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# ===================
# FRONTEND LAYER
# ===================

# API URLs
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_ENV=development

# ===================
# CLOUD LAYER (AWS)
# ===================

# AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_ACCOUNT_ID=your-account-id

# AWS IoT
IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com
IOT_CERT_PATH=./certificates/device.pem.crt
IOT_KEY_PATH=./certificates/device.private.key
IOT_ROOT_CA_PATH=./certificates/AmazonRootCA1.pem

# Lambda
LAMBDA_MEMORY=512
LAMBDA_TIMEOUT=30

# S3
S3_BUCKET_AUDIO=anc-audio-data
S3_BUCKET_MODELS=anc-ml-models

# DynamoDB
DYNAMODB_SESSIONS=anc-sessions
DYNAMODB_METRICS=anc-metrics

# ===================
# MONITORING
# ===================

# Grafana
GRAFANA_PASSWORD=admin

# Prometheus
PROMETHEUS_PORT=9090

# ===================
# PRODUCTION OVERRIDES
# ===================

# Uncomment for production
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:pass@prod-db-host:5432/anc_system
# CORS_ORIGINS=https://yourdomain.com
# SESSION_COOKIE_SECURE=True
